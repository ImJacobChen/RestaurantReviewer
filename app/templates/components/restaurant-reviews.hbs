<h2 class="title is-1">Reviews</h2>

{{! User review form}}
<div class="section user-review">
	<h4 class="title is-4">Leave a review</h4>
	<form {{action "postReview" restaurant.id on="submit"}}>
		<div class="level">
			<div class="level-item">
				<label for="reviewName">Name:</label><br>
				{{input id="reviewName" title="your name" type="text" value=reviewName class="input"}}
			</div>
			<div class="level-item">
				<label for="reviewBody">Review:</label><br>
				{{textarea value=reviewBody title="your review" rows="2" id="reviewBody" class="input"}}
			</div>
			<div class="level-item">
				<label for="star-rating">Star Rating:</label>
				<fieldset id="star-rating" title="Your rating out of 5 stars" class="star-rating">
					
					{{radio-button
					  name="star-rating"
					  value="5"
					  radioId="star-rating-5"
					  groupValue=reviewRating
					  tabindex=0
					  }}
					<label for="star-rating-5" title="5 stars"></label>
					
			        {{radio-button
					  name="star-rating"
					  value="4"
					  radioId="star-rating-4"
					  groupValue=reviewRating
					  tabindex=0
					  }}
					<label for="star-rating-4" title="4 stars"></label>				
					
			        {{radio-button
					  name="star-rating"
					  value="3"
					  radioId="star-rating-3"
					  groupValue=reviewRating
					  tabindex=0
					  }}
					<label for="star-rating-3" title="3 stars"></label>			
					
			        {{radio-button
					  name="star-rating"
					  value="2"
					  radioId="star-rating-2"
					  groupValue=reviewRating
					  tabindex=0
					  }}
					<label for="star-rating-2" title="2 stars"></label>			
					
			        {{radio-button
					  name="star-rating"
					  value="1"
					  radioId="star-rating-1"
					  groupValue=reviewRating
					  tabindex=0
					  }}
					<label for="star-rating-1" title="1 stars"></label>
				</fieldset>
			</div>
			<div class="level-item">
				<button class="button disabled" type="submit">Submit</button>
			</div>
		</div>
	</form>
</div>
{{! End user review form}}

<div class="section">
	{{#each restaurant.reviews as |review|}}
		<div class="media">
			<div class="media-left">
				<h1 class="title is-3"><strong>{{review.name}}</strong></h1>
				<p class="subtitle">"{{review.body}}"</p>
			</div>

			<div class="media-content">
				
			</div>
				
			<div class="media-right">
				{{generate-stars review.rating}}
				{{timestamp-to-date review.timestamp}}
			</div>
		</div>
	{{/each}}
</div>

{{yield}}
